<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpenseFragment">
<TextView
    android:id="@+id/tvExpenseTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="Name of Item:"
    />
    <TextView
        android:id="@+id/tvExpenseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvExpenseTitle"
        android:layout_marginTop="24dp"
        android:text="Amount:"
        />
    <EditText
        android:id="@+id/etExpenseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="What's your expense?"
        app:layout_constraintStart_toEndOf="@id/tvExpenseTitle"
        app:layout_constraintTop_toTopOf="@id/tvExpenseTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvExpenseTitle"
        />
    <EditText
        android:id="@+id/etExpenseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="How much did it cost?"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/tvExpenseValue"
        app:layout_constraintTop_toTopOf="@id/tvExpenseValue"
        app:layout_constraintBottom_toBottomOf="@id/tvExpenseValue"
        />
    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHP"
        app:layout_constraintStart_toEndOf="@id/etExpenseValue"
        app:layout_constraintTop_toTopOf="@id/etExpenseValue"
        app:layout_constraintBottom_toBottomOf="@id/etExpenseValue"
        />
    <Button
        android:id="@+id/btnAdd"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvExpenseValue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>